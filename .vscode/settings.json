{
  // Editor Settings
  "editor.autoClosingBrackets": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",

  // Terminal Settings
  "terminal.integrated.fontSize": 14,

  // Auto-save
  "files.autoSave": "afterDelay",

  // File Exclusions
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.github": true,
    "**/.gitp*": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/.vscode": true,
    "**/CVS": true,
    "**/core.Microsoft*": true,
    "**/core.mongo*": true,
    "**/core.python*": true,
    "**/dist": true,
    "**/node_modules": true
  },

  // Formatters for Specific Languages
  "[django-html]": { "editor.defaultFormatter": "monosans.djlint" },
  "[handlebars]": { "editor.defaultFormatter": "monosans.djlint" },
  "[hbs]": { "editor.defaultFormatter": "monosans.djlint" },
  "[html]": { "editor.defaultFormatter": "monosans.djlint" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jinja]": { "editor.defaultFormatter": "monosans.djlint" },
  "[jinja-html]": { "editor.defaultFormatter": "monosans.djlint" },
  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[mustache]": { "editor.defaultFormatter": "monosans.djlint" },
  "[nj]": { "editor.defaultFormatter": "monosans.djlint" },
  "[njk]": { "editor.defaultFormatter": "monosans.djlint" },
  "[nunjucks]": { "editor.defaultFormatter": "monosans.djlint" },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[twig]": { "editor.defaultFormatter": "monosans.djlint" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // Prettier Settings
  "prettier.arrowParens": "always",
  "prettier.endOfLine": "lf",
  "prettier.printWidth": 80,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "all",
  "prettier.useTabs": false,

  // Black Formatter for Python
  "black-formatter.args": [
    "--line-length",
    "79",
    "--target-version",
    "py311",
    "--skip-string-normalization"
  ],

  // Flake8 Linting Settings
  "flake8.args": ["--ignore=E501, F401"],
  "flake8.importStrategy": "fromEnvironment",
  "flake8.severity": {
    "E": "Error",
    "W": "Warning",
    "F": "Error"
  },

  // ESLint Settings
  "eslint.format.enable": true,
  "eslint.options": { "extensions": [".js", ".jsx", ".ts", ".tsx"] },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Disable Built-in Formatters for JS/TS
  "javascript.format.enable": false,
  "typescript.format.enable": false,

  // CSS and Emmet Settings
  "css.lint.unknownAtRules": "ignore",
  "css.validate": false,
  "emmet.includeLanguages": { "django-html": "html" },

  // UI and Git Settings
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "workbench.iconTheme": "material-icon-theme",

  // djlint Settings for Django
  "djlint.formatAttributeTemplateTags": true,
  "djlint.lineBreakAfterMultilineTag": true,
  "djlint.maxAttributeLength": 80,
  "djlint.maxBlankLines": 1,
  "djlint.maxLineLength": 80,
  "djlint.preserveBlankLines": true
}
